#!/bin/bash

# Durchsuche alle ge채nderten Dateien nach dem Schl체sselwort "ToDo", "TODO" oder "todo"
for file in $(git diff --cached --name-only); do
  if grep -n -i "todo" "$file"; then
    echo "Fehler: Datei '$file' enth채lt das Schl체sselwort 'ToDo', 'TODO' oder 'todo' an folgender Stelle:"
    grep -n -i "todo" "$file" | sed 's/:/\t/g' | awk '{print "  Zeile " $1 ": " $2}'
    echo "Bitte entferne es, bevor du committest."
    exit 1
  fi
done
